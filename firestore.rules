rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Games collection - allow read/write for multiplayer
    match /games/{gameId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      // Only allow delete if authenticated (for cleanup)
      allow delete: if request.auth != null;
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
