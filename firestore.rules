rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{odg} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == odg;
      allow update: if request.auth != null && request.auth.uid == odg;
      allow delete: if request.auth != null && request.auth.uid == odg;
    }
    
    // Matchmaking queue
    match /matchmaking/{odg} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == odg;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == odg;
    }
    
    // Games collection
    match /games/{gameId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        resource.data.players.red == request.auth.uid ||
        resource.data.players.yellow == request.auth.uid
      );
      allow delete: if false;
    }
    
    // Rematch requests
    match /rematch/{rematchId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // User history (opponent stats)
    match /userHistory/{odg}/opponents/{opponentId} {
      allow read: if request.auth != null && request.auth.uid == odg;
      allow write: if request.auth != null;
    }
  }
}
